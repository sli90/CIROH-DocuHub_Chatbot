# Firecrawl API Configuration
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
LLM_API_KEY = your_llm_api_key_here

# Scraping Configuration
SCRAPE_DELAY=1.0               # Delay between requests in seconds
MAX_RETRIES=6                  # Maximum number of retry attempts for failed requests
CONCURRENT_REQUESTS=5          # Number of concurrent requests (be conservative)

# Output Configuration
OUTPUT_DIR=docs_ciroh_org      # Directory where scraped content will be saved
CREATE_BACKUPS=true            # Create backups before overwriting existing files

# Logging Configuration
LOG_LEVEL=INFO                 # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=scraping.log          # Log file name

# Optional: Alternative scraping methods (if Firecrawl fails)
ENABLE_FALLBACK_SCRAPING=true  # Use BeautifulSoup as fallback
USER_AGENT=Mozilla/5.0 (compatible; CIROH-Docs-Scraper/1.0)