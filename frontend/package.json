{
  "name": "ciroh",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tailwindcss/vite": "4.1.13",
    "clsx": "2.1.1",
    "lucide-react": "0.294.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "4.1.13",
    "zustand": "4.5.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/ui": "3.2.4",
    "eslint": "8.57.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.20",
    "jsdom": "22.1.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "vite": "5.4.20",
    "vitest": "3.2.4"
  },
  "description": "A modern React frontend for the CIROH (Consortium of Universities for the Advancement of Hydrologic Science) chat application. Built with Vite, TypeScript, and Tailwind CSS, this application provides an intelligent chat interface that integrates with a backend API to answer questions about hydrologic science and CIROH resources.",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
